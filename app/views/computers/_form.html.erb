
<%= simple_form_for(@computer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :finish %>
    <%= f.input :case %>
    <%= f.input :motherboard %>
    <%= f.input :power_supply %>
    <%= f.input :grpahics_card %>
    <%= f.input :central_processing_unit %>
    <%= f.input :memory %>
    <%= f.input :hard_drive %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
