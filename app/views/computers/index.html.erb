



<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the latest Computers on Lazerus
      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="computer-index-grid pt4">
  <% @computers.each do |computer| %>

    <div class="computer border-light">
      <div class="computer-thumb">
      <%= link_to image_tag(computer.image_url(:thumb)), computer %>

      <% if computer.finish? %>
        <div class="condition">
          <span class="tag is-dark"><%= computer.finish %></span>
        </div>
      <% end %>
      </div>


    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to computer.title, computer %></h3>

      <p class="has-text-gray fg pt1">Sold by <%= computer.user.name %></p>

      <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(computer.price) %></p>

      <% if computer_author(computer) %>
         <%= link_to 'Edit', edit_computer_path(computer), class: "button is-small" %>
         <%= link_to 'Delete', computer, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>

    </div>
  </div>
  <% end %>
</div>