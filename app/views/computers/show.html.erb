<% content_for :body_class, 'bg-light' %>

<section class="section computer-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @computer.title %></h1>

      <div class="feature-image">
        <%= image_tag(@computer.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @computer.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @computer.finish %>
        <tr>
          <td class="has-text-weight-bold">Finish:</td>
          <td><%= @computer.finish %></td>
        </tr>
        <% end %>

        <% if @computer.case %>
          <tr>
            <td class="has-text-weight-bold">Case:</td>
            <td><%= @computer.case %></td>
          </tr>
        <% end %>

        <% if @computer.memory %>
          <tr>
            <td class="has-text-weight-bold">RAM:</td>
            <td><%= @computer.memory %></td>
          </tr>
        <% end %>

      <% if @computer.hard_drive %>
        <tr>
          <td class="has-text-weight-bold">Storage:</td>
          <td><%= @computer.hard_drive %></td>
        </tr>
          <% end %>

        <% if @computer.grpahics_card %>
          <tr>
            <td class="has-text-weight-bold">GPU:</td>
            <td><%= @computer.grpahics_card %></td>
          </tr>
        <% end %>

        <% if @computer.central_processing_unit %>
          <tr>
            <td class="has-text-weight-bold">CPU:</td>
            <td><%= @computer.central_processing_unit %></td>
          </tr>
        <% end %>

        <% if @computer.motherboard %>
          <tr>
            <td class="has-text-weight-bold">Motherboard:</td>
            <td><%= @computer.motherboard %></td>
          </tr>
        <% end %>

        <% if @computer.power_supply %>
          <tr>
            <td class="has-text-weight-bold">Power Supply:</td>
            <td><%= @computer.power_supply %></td>
          </tr>
        <% end %>

      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@computer.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @computer.user.name %></p>
        <%= button_to 'Add to cart', line_items_path(computer_id: @computer), class: 'button is-warning add-to-cart center' %>
      </div>
    </div>
  </div>

  <% if computer_author(@computer) %>
    <%= link_to 'Edit', edit_computer_path(@computer), class: 'button' %>
  <% end %>
</section>